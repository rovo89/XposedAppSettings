<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res/de.robv.android.xposed.mods.appsettings"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="10dp" >
    <de.robv.android.xposed.mods.appsettings.FilterItemComponent
        android:id="@+id/fltAppType"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:label="Type"
        app:overridden_label="@string/user"
        app:unchanged_label="@string/system" />
    <de.robv.android.xposed.mods.appsettings.FilterItemComponent
        android:id="@+id/fltActive"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:label="Settings active"
        app:overridden_label="@string/active"
        app:unchanged_label="@string/not_active" />
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@android:color/darker_gray" />
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dip"
        android:layout_weight="1" >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >
            <de.robv.android.xposed.mods.appsettings.FilterItemComponent
                android:id="@+id/fltDPI"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:label="@string/dpi2" />
            <de.robv.android.xposed.mods.appsettings.FilterItemComponent
                android:id="@+id/fltTextScale"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:label="@string/font_scale2" />
            <de.robv.android.xposed.mods.appsettings.FilterItemComponent
                android:id="@+id/fltResLoad"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:label="@string/resource_loading" />
            <de.robv.android.xposed.mods.appsettings.FilterItemComponent
                android:id="@+id/fltLocale"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:label="@string/locale" />
            <de.robv.android.xposed.mods.appsettings.FilterItemComponent
                android:id="@+id/fltFullscreen"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:label="@string/fullscreen" />
            <de.robv.android.xposed.mods.appsettings.FilterItemComponent
                android:id="@+id/fltNoTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:label="@string/no_title" />
            <de.robv.android.xposed.mods.appsettings.FilterItemComponent
                android:id="@+id/fltAllowOnLockscreen"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:label="@string/allowed_on_lockscreen" />
            <de.robv.android.xposed.mods.appsettings.FilterItemComponent
                android:id="@+id/fltScreenOn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:label="@string/screen_on" />
            <de.robv.android.xposed.mods.appsettings.FilterItemComponent
                android:id="@+id/fltOrientation"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:label="@string/orientation2" />
            <de.robv.android.xposed.mods.appsettings.FilterItemComponent
                android:id="@+id/fltResident"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:label="@string/resident" />
            <de.robv.android.xposed.mods.appsettings.FilterItemComponent
                android:id="@+id/fltInsNotif"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:label="@string/insistent_notifications" />
            <de.robv.android.xposed.mods.appsettings.FilterItemComponent
                android:id="@+id/fltPermissions"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:label="@string/permissions" />
        </LinearLayout>
    </ScrollView>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="right"
        android:orientation="horizontal"
        android:paddingTop="10dp" >
        <Button
            android:id="@+id/btnFilterCancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/cancel" />
        <Button
            android:id="@+id/btnFilterClear"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/clear" />
        <Button
            android:id="@+id/btnFilterApply"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/apply" />
    </LinearLayout>
</LinearLayout>
